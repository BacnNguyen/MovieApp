<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/avt_movie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/detail_movie_avt">
                </ImageView>

                <TextView
                    android:id="@+id/name_movie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/avt_movie"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/sp_5"
                    android:text="name"
                    android:textSize="@dimen/dp_30"
                    android:textStyle="bold">
                </TextView>

                <ImageView
                    android:id="@+id/btn_bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/avt_movie"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/sp_10"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:src="@drawable/ic_detail_bookmark"
                    tools:ignore="SpeakableTextPresentCheck">
                </ImageView>

                <LinearLayout
                    android:id="@+id/btn_play_trailer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_movie"
                    android:layout_centerHorizontal="true"
                    android:background="#003AE6"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:src="@drawable/ic_play_trailer"
                        app:tint="#FF0000">
                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TRAILER"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_20"
                        android:textStyle="bold">
                    </TextView>
                </LinearLayout>

                <TextView
                    android:id="@+id/year_movie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_play_trailer"
                    android:layout_centerHorizontal="true"
                    android:text="2021"
                    android:textSize="@dimen/sp_30">
                </TextView>

                <TextView
                    android:id="@+id/description_movie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/year_movie">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recommends"
                    android:layout_below="@+id/description_movie"
                    android:textSize="@dimen/dp_20"
                    android:padding="@dimen/dp_10"
                    android:textColor="#0019FF"
                    android:id="@+id/label_recommend">
                </TextView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycle_view_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label_recommend"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">
                </androidx.recyclerview.widget.RecyclerView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_20"
                    android:layout_below="@id/recycle_view_recommend"
                    android:textColor="#0019FF"
                    android:padding="@dimen/dp_10"
                    android:id="@+id/label_comment">
                </TextView>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recycle_view_comment"
                    android:layout_below="@+id/label_comment"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">
                </androidx.recyclerview.widget.RecyclerView>

            </RelativeLayout>
        </ScrollView>
</layout>